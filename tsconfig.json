{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "alwaysStrict": true,
    "allowJs": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "preserve",
    "declaration": true,
    "declarationMap": true,
    "lib": ["DOM", "ESNext", "WebWorker"]
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "rollup.config.js"]
}
